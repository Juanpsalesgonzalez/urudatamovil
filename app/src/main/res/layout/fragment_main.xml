<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.proyecto.urudatamovil.MainActivity$PlaceholderFragment">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchEntradaSalida"
        android:checked="false"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton_Entrada_Salida"
        android:textOff=" Salida "
        android:textOn="Entrada"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/switchEntradaSalida"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textName"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/toggleButton_Entrada_Salida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_Semaforo"
        android:layout_alignRight="@+id/toggleButton_Entrada_Salida"
        android:layout_alignEnd="@+id/toggleButton_Entrada_Salida"
        android:layout_alignParentTop="true" />

</RelativeLayout>